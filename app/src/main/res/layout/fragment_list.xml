<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/card_padding_horizontal"
    android:paddingRight="@dimen/card_padding_horizontal"
    android:paddingTop="@dimen/card_padding_vertical"
    tools:context=".ActivitiesAndFragments.CategoryListActivityFragment"
    tools:showIn="@layout/activity_list">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/catagory_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/empty_text"
        android:gravity="center"
        android:text="@string/empty_list_set"/>

</RelativeLayout>
