<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/header"
        android:textSize="@dimen/text_size_headline"
        android:gravity="start|center_vertical"
        android:textColor="@android:color/primary_text_light"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="@dimen/general_4dp"
        android:layout_marginLeft="@dimen/general_24dp"
        android:layout_marginStart="@dimen/general_24dp"
        android:paddingTop="@dimen/general_24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/header_subtitle"
        android:textSize="@dimen/text_size_medium"
        android:gravity="start|center_vertical"
        android:textColor="@android:color/primary_text_light"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="@dimen/general_8dp"
        android:layout_marginLeft="@dimen/general_24dp"
        android:layout_marginStart="@dimen/general_24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider"/>

</LinearLayout>
