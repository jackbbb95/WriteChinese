<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/category_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/above_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/category_title"
                    android:textColor="@android:color/primary_text_light"
                    android:padding="@dimen/card_padding_vertical"
                    android:textSize="@dimen/abc_text_size_large"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/category_title"
                    android:layout_toRightOf="@id/category_title"
                    android:id="@+id/char_count_category"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/secondary_text_dark"
                    android:textSize="@dimen/abc_text_size_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/category_description"
                    android:textColor="@android:color/secondary_text_light"
                    android:padding="@dimen/card_padding_vertical"
                    android:textSize="@dimen/abc_text_size_medium"/>

            </RelativeLayout>


            <View
                android:id="@+id/under_title_divider"
                android:layout_below="@+id/above_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDivider"
                android:layout_marginLeft="@dimen/card_padding_horizontal"
                android:layout_marginStart="@dimen/card_padding_horizontal"
                android:layout_marginRight="@dimen/card_padding_horizontal"
                android:layout_marginEnd="@dimen/card_padding_horizontal"/>

            <TextView
                android:layout_below="@+id/under_title_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_large_dp"
                android:id="@+id/characters_textview"
                android:padding="@dimen/activity_horizontal_margin"
                android:maxLines="1"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>